@using ForkYeah.Models.Default;

@model RepositoryDetails

@using(Bs.Div().AddCss("table", "full-height").Begin())
{
    using (Bs.Div().AddCss("table-row").Begin())
    {
        using (Bs.Div().AddCss("table-cell").Begin())
        {
            using (Bs.Div().AddCss("content-header").Begin())
            {                
                @Bs.Heading2("FluentBootstrap").SetSmallText("somedave / FluentBootstrap ")
                @Bs.Div().AddChild(x => Bs.Strong(Bs.Badge("C#").ToString() + " "
                    + Bs.Span().AddCss("octicon", "octicon-history") + " 194 Commits / "
                    + Bs.Span().AddCss("octicon", "octicon-organization") + " 2 Contributors / "
                    + Bs.Span().AddCss("octicon", "octicon-issue-opened") + " 16 Issues / Added: January 4, 2015"))
            }
        }
    }
    using (Bs.Div().AddCss("table-row", "full-height").Begin())
    {
        using (Bs.Div().AddCss("table-cell", "full-height").Begin())
        {
            using (Bs.Div().AddCss("table", "full-height").Begin())
            {
                using (Bs.Div().AddCss("table-row", "full-height").SetVisibility(Visibility.Hidden).Begin())
                {
                    using (Bs.Div().AddCss("table-cell", "full-height", "readme").Begin())
                    {
                        using (Bs.Div().AddCss("relative-wrapper").Begin())
                        {
                            using (Bs.Div().AddCss("scroll-wrapper").Begin())
                            {
                                for (int c = 0; c < 100; c++)
                                {
                                    @Bs.Paragraph("readme, readme, readme, " + c)
                                }
                            }
                        }
                    }
                    using (Bs.Div().AddCss("table-cell", "full-height", "comments").Begin())
                    {
                        using (Bs.Div().AddCss("relative-wrapper").Begin())
                        {
                            using (Bs.Div().AddCss("scroll-wrapper").Begin())
                            {
                                for (int c = 0; c < 100; c++)
                                {
                                    @Bs.Paragraph("comments, comments, comments, " + c)
                                }
                            }
                        }
                    }
                }        
            }
        }
    }
}
